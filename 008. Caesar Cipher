# main.py

from art import logo

alphabet = [
    'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o',
    'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z', 'a', 'b', 'c', 'd',
    'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's',
    't', 'u', 'v', 'w', 'x', 'y', 'z'
]

def caesar(start_text, shift_amount, cipher_direction):
    end_text = ""
    # sets correct shift direction
    if cipher_direction == "decode":
        shift_amount *= -1
    for char in start_text:
        # only encodes/decodes letters in the alphabet
        if char not in alphabet:
            end_text += char
        # finds coded/decoded letter and adds to end text string
        else:
            position = alphabet.index(char)
            new_position = position + shift_amount
            end_text += alphabet[new_position]

    print(f"Here's the {cipher_direction}d result: {end_text}")
    # function continues to get called until user ready to stop
    answer = input("Type 'yes' to go again, otherwise type 'no'.\n")
    if answer == "yes":
        direction = input(
            "Type 'encode' to encrypt, type 'decode' to decrypt:\n")
        text = input("Type your message:\n").lower()
        shift = int(input("Type the shift number:\n"))
        caesar(start_text=text, shift_amount=shift, cipher_direction=direction)
    else:
        print("Goodbye")


print(logo)

max_letters = 26    # used to adjust shift if too large
direction = input("Type 'encode' to encrypt, type 'decode' to decrypt:\n")
text = input("Type your message:\n").lower()
shift = int(input("Type the shift number:\n"))

# adjusts shift value if greater than max number of letters in alphabet
if shift > max_letters:
    shift %= max_letters

caesar(start_text=text, shift_amount=shift, cipher_direction=direction)

